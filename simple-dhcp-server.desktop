[Desktop Entry]
Type=Application
Name=Simple DHCP Server
Exec=sudo sh -c "( cd \"`dirname %k`\" || cd "$HOME" ) && ( apt install pipx -y -qq || true ) && pipx run --spec simple-dhcp-server[qt] simple-dhcp-server-qt || ( echo 'Install pipx from https://pipx.pypa.io/stable/installation/ and start this again.'; read REPLY )"
Icon=python3
Terminal=true
